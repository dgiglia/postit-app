  <div class="row">
    <div class='well span0 text-center'>
      <% if logged_in? %>
        <%= link_to vote_post_path(post, vote: true), method: 'post' do %> 
          <i class='icon-arrow-up'></i>  
        <% end %> 
        <br/>
      <% end %>
      <%= post.total_votes %> votes
      <br/>
      <% if logged_in? %>
        <%= link_to vote_post_path(post, vote: false), method: 'post' do %> 
          <i class='icon-arrow-down'></i>          
        <% end %> 
      <% end %>
    </div>
    <div class="well span8">
      <%= render post.categories %>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class="quiet">posted by: <%= link_to post.user.username, user_path(post.user) %>
          <small>at <%= display_datetime(post.created_at) %></small>
        </span>
        <span>
          <small>
            <%= link_to("#{post.comments.size} comments", post_path(post)) %>
          </small>
        </span>
      </p>
    </div>
  </div>