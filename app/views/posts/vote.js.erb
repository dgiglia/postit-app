<% if @vote.errors.any? %>
  $("#vote_error").show();
  $("#vote_error").click(function(){
    $("#vote_error").hide()
  });
<% else %>
  $("#votes_post_<%= @post.to_param %>").html("<%= @post.total_votes %> votes");
  $("#vote_success").show();
  $("#vote_success").click(function(){
    $("#vote_success").hide()
  });
<% end %>