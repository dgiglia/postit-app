<%= render 'shared/errors', obj: @post %>

<div class = 'well span8'>
  <%= form_for @post do |f| %>
    <div class = 'control-group'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'span5' %>
    </div>
    <div class = 'control-group'>
      <%= f.label :url %>
      <%= f.text_field :url, class: 'span5' %>
    </div>
    <div class = 'control-group'>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5, class: 'span5' %>
    </div>     
  <%= f.submit(@post.new_record? ? "Create Post" : "Update Post", class: "btn btn-primary") %>
  <% end %>
</div>