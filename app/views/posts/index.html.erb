<%= render 'shared/content_title', title: 'All Posts' %>

<% @posts.each do |post| %>
  <%= render 'post', post: post %>
<% end %>

<div class="pagination pagination-centered">
  <ul>
    <% @pages.times do |page| %>
      <% if (params[:offset].nil? && page == 0) || params[:offset].to_s == (page * Post::PER_PAGE).to_s %>
        <li class='disabled'><a><%= "#{page+1}" %></a></li>
      <% else %>
      <li><%= link_to "#{page+1}", posts_path(offset: page * Post::PER_PAGE) %></li>
      <% end %>
    <% end %>
  </ul>
</div>
