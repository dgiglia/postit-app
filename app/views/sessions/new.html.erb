<%= render 'shared/content_title', title: 'Please Log In' %>

<div class='well span8'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || '', class: 'span5' %>
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:password] || '', class: 'span5' %>
    </div>
    <%= submit_tag "Login", class: "btn btn-primary" %>
    <p class='btn'>
      <%= link_to 'Cancel', root_path %>
    <br/>
    </p>
    <p>    <br/>
      Not yet a user? 
      <%= link_to 'Register', register_path %>
    </p>
  <% end %>
</div>